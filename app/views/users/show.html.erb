<%= render "shared/sidebar" %>

<section>

<h1><%= @user.username %></h1>

<div id="category-spend" style="width:100%; height:400px;"></div>

<script>
	$(function () { 
	    $('#category-spend').highcharts({
	        chart: {
	            type: 'bar'
	        },
	        title: {
	            text: 'Fruit Consumption'
	        },
	        xAxis: {
	            categories: ['Apples', 'Bananas', 'Oranges']
	        },
	        yAxis: {
	            title: {
	                text: 'Fruit eaten'
	            }
	        },
	        series: [{
	            name: 'Jane',
	            data: [1, 0, 4]
	        }, {
	            name: 'John',
	            data: [5, 7, 3]
	        }]
	    });
	});
</script>

</section>